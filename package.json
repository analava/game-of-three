{
    "name": "game-of-three",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.js",
    "engines": {
        "node": ">=8",
        "yarn": "*"
    },
    "scripts": {
        "precommit": "yarn lint",
        "build": "babel ./src -d ./lib",
        "flow": "flow",
        "start": "node ./src/index.js",
        "dev": "nodemon ./src/index.js",
        "lint": "eslint ./src/ --ignore-path .gitignore --ignore-pattern internals/scripts",
        "lint:fix": "yarn lint --fix",
        "lint:watch": "yarn lint --watch",
        "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive lib/**/*.test.js",
        "test:unit": "cross-env NODE_ENV=test mocha lib/api/tests/unit",
        "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 lib/api/tests/integration",
        "test:watch": "cross-env NODE_ENV=test mocha --watch lib/api/tests/unit",
        "validate": "yarn lint && yarn test",
        "postpublish": "git push --tags",
        "docs": "apidoc -i src -o docs",
        "postdocs": "opn docs/index.html"
    },
    "author": "AnaLava",
    "license": "ISC",
    "dependencies": {
        "express": "^4.16.4",
        "express-async-errors": "^3.1.1",
        "express-validation": "^1.0.2",
        "helmet": "^3.15.0",
        "http-status": "^1.3.1",
        "joi": "^14.3.1",
        "joi-objectid": "^3.0.1",
        "lodash": "^4.17.11",
        "mongoose": "^5.4.1",
        "morgan": "^1.9.1",
        "redis": "^3.0.2",
        "winston": "^3.1.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0",
        "@babel/core": "^7.0.0",
        "@babel/preset-flow": "^7.0.0",
        "apidoc": "^0.17.5",
        "chai": "^4.1.0",
        "chai-as-promised": "^7.1.1",
        "cross-env": "^5.2.0",
        "eslint": "^5.3.0",
        "eslint-config-airbnb-base": "^12.0.1",
        "eslint-plugin-import": "^2.2.0",
        "mocha": "^5.2.0",
        "nodemon": "^1.11.0",
        "nyc": "^13.3.0",
        "opn-cli": "^3.1.0",
        "sinon": "^6.0.0",
        "sinon-chai": "^3.0.0",
        "supertest": "^3.0.0"
    }
}
